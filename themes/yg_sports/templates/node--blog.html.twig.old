<div id="blog">
  <div class="container">
    <div class="row">
        <div class="col-lg-8">
            <p class="blog-info">Posted: {% if date %}  {{ date }} {% endif %} | By <a href="#">{{ node.Owner.name.value }}</a></p>
            <img class="img-responsive" src="{{content.field_image.0}}" class="img-responsive" width="100%"  alt="{{ view.field.title.value(view.result[loop.index-1]) }}"><br />
            <p class="lead">{{ content.body }} </p>
			{% if comment_form %}
			<div class="row col-md-12 other-comments">
                {{ content.field_blog_comments }} 
            </div>
			{% endif %}
        </div>
        <div class="col-md-4">
                <h3>Other Posts</h3>  
                <div class="row">
                    <dd>{{ drupal_view('blog', 'block_2') }}</dd>
                </div>
        </div>
    </div>
  </div>
 </div>